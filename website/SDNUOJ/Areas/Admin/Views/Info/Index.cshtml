@{
    ViewBag.__Title = "System Message";
}

<table class="table-main">
    <thead>
        <tr>
            <th>System Message</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td class="text-center">
                @Html.Raw((String.IsNullOrEmpty(ViewBag.Description) || String.IsNullOrEmpty(HttpUtility.UrlDecode(ViewBag.Description.Trim()))) ? "(# ゜Д゜)" : HttpUtility.UrlDecode(ViewBag.Description.Trim()))
            </td>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            <td class="text-center">
                <a href="@Html.Raw(String.IsNullOrEmpty(ViewBag.BackUrl) ? "javascript:void(0);" : ViewBag.BackUrl)" @Html.Raw(String.IsNullOrEmpty(ViewBag.BackUrl) ? "onclick=\"history.go(-1);\"" : "")>Back</a>
            </td>
        </tr>
    </tfoot>
</table>
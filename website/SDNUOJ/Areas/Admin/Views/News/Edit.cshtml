@model SDNUOJ.Entity.NewsEntity

@{
    ViewBag.__Title = "系统公告编辑";
    
    RouteData routeData = ViewContext.RouteData.Route.GetRouteData(this.Context);
    String action = routeData.Values["action"] as String;
}

@using (Html.BeginForm(action, "News", new { id = Model.AnnounceID }, FormMethod.Post, new { @data_verify = "true", @data_waiting = "true" }))
{
    @Html.AntiForgeryToken()
    <table class="table-main">
        <thead>
            <tr>
                <th>系统公告编辑说明</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="supplementary">
                    1. 您可以在本页添加或修改系统公告，本页所有内容均为必填项。
                </td>
            </tr>
        </tbody>
    </table>
    <br />
    <table class="table-main">
        <thead>
            <tr>
                <th colspan="2">系统公告编辑</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="width:25%;"><span class="star">*</span>公告标题</td>
                <td><input name="title" type="text" maxlength="255" value="@Model.Title" class="textbox-long" data-emptyinfo="您没有输入公告标题，请重新输入！" /></td>
            </tr>
            <tr>
                <td style="width:25%; vertical-align:top;">
                    <span class="star">*</span>公告描述<br />
                    <span class="supplementary">支持HTML代码</span>
                </td>
                <td>
                    <textarea id="description" name="description" class="texteditor" data-editor="true" data-emptyinfo="您没有输入公告内容，请重新输入！">@Html.Raw(Model.Description)</textarea>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td class="text-center" colspan="2">
                    <button type="submit">提交</button>
                    <button type="reset">重置</button>
                </td>
            </tr>
        </tfoot>
    </table>
}
@model SDNUOJ.Entity.ProblemCategoryEntity

@{
    ViewBag.__Title = "题目分类编辑";

    RouteData routeData = ViewContext.RouteData.Route.GetRouteData(this.Context);
    String action = routeData.Values["action"] as String;
}

@using (Html.BeginForm(action, "Problem", new { id = Model.TypeID }, FormMethod.Post, new { @data_verify = "true", @data_waiting = "true" }))
{
    @Html.AntiForgeryToken()
    <table class="table-main">
        <thead>
            <tr>
                <th>题目分类编辑说明</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="supplementary">
                    1. 您可以在本页添加或修改题目分类，本页所有内容均为必填项。<br />
                    2. 题目分类排序序号可以为任意数字，显示时均按该序号进行排序显示。
                </td>
            </tr>
        </tbody>
    </table>
    <br />
    <table class="table-main">
        <thead>
            <tr>
                <th colspan="2">题目分类编辑</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="width:25%;"><span class="star">*</span>分类标题</td>
                <td><input name="title" type="text" value="@Model.Title" class="textbox" data-emptyinfo="您没有输入题目分类名称，请重新输入！" /></td>
            </tr>
            <tr>
                <td>
                    <span class="star">*</span>分类排序序号<span class="supplementary">（可重复）</span>
                </td>
                <td><input name="order" type="text" value="@Model.Order" class="textbox" data-emptyinfo="您没有输入分类排序序号，请重新输入！" data-regex="^\d+$" data-invalidinfo="分类排序序号输入错误，请重新输入！" /></td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td class="text-center" colspan="2">
                    <button type="submit">提交</button>
                    <button type="reset">重置</button>
                </td>
            </tr>
        </tfoot>
    </table>
}